  "data_quality_filters": {
    "description": "찌꺼기 데이터 필터링 규칙",
    "rules": {
      "ai_generated_detection": {
        "description": "AI 생성 리뷰 탐지 패턴",
        "human_signals": {
          "korean": ["ㅋㅋ", "ㅠㅠ", "ㄹㅇ", "ㅇㅇ", "ㅎㅎ", "ㆍ", "♡", "★"],
          "line_breaks": "multiple",
          "emoji_style": "unicode_or_kaomoji"
        },
        "ai_signals": {
          "formal_patterns": ["것 같다", "에 대해", "라고 생각한다", "수 있습니다"],
          "line_breaks": "minimal",
          "structure": "overly_consistent"
        }
      },
      "quality_thresholds": {
        "min_review_length": 50,
        "min_playtime_minutes": 30,
        "exclude_patterns": ["^\\.$", "^\\.\\.\\.$", "^nice$", "^good$", "^bad$"],
        "max_repetition_ratio": 0.3
      },
      "review_bomb_detection": {
        "window_days": 3,
        "volume_spike_threshold": 5.0,
        "negative_ratio_threshold": 0.8
      }
    }
  }
